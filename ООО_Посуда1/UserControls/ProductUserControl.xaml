<UserControl x:Class="ООО_Посуда1.UserControls.ProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ООО_Посуда1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="ImageProduct" Height="120" Width="120" Margin="5"/>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
            <Label x:Name="NameLabel" />
            <Label x:Name="DescriptionLabel" />
            <Label x:Name="CostLabel" />
            <Label x:Name="DiscountLabel" />
        </StackPanel>

        <Label Grid.Column="2" x:Name="AmountLabel" />
    </Grid>
</UserControl>
